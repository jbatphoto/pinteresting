<h1>Listing pins</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
			<th>Posted By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
				<td><%= image_tag pin.image.url(:medium) %></td>
        <td><%= link_to pin.description, pin %></td>
				<td><%= pin.user.email if pin.user %></td>
				<td><% if pin.user == current_user %></td>
				<td><%= link_to 'Edit', edit_pin_path(pin) %></td>
				<td><%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path, class: "btn btn-danger" %>
<% end %>
